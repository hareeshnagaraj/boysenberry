/*
  
  Manifest file for boysenberry
  https://github.com/hareeshnagaraj/boysenberry
  By Hareesh Nagaraj & Dheeraj Manjunath

*/
{
  "manifest_version": 2,

  "name": "boysenberry",
  "description": "quick and dirty dev tools",
  "version": "1.0",

  "background":{
      "scripts":["externalJS/jquery-1.11.1.min.js","boysenEvents.js","boysenDom.js"],
      "persistent":false
    },

  "content_scripts":[
    {
      "matches":["http://*/*"],
      "js":["externalJS/jquery-1.11.1.min.js","boysenInsertions.js"],
      "css":["boysenCSS.css"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "boysenberry_logo.png"
  }
}